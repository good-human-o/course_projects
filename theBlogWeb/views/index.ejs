
<body>
    <%- include("partials/header.ejs") %>
    <form action="/write" method="post">
        <button class="btn btn-primary" type="submit">
            <i class="fas fa-plus-circle"></i>
            Create New Post
        </button>
    </form>
    <h2 class="container heading">Recent Posts:</h2>
    <% if (posts.length === 0) { %>
        <p>No posts yet.</p>
      <% } else { %>
        <% posts.forEach((post, index) => { %>
          <div class="post card mt-2">
            <h2><%= post.title %></h2>
            <div class="post-info">
              <p>Posted by <%= post.author %></p>
              <p>Posted on <%= post.date %></p>
            </div>
            <a class="read-more-link" href="/post/<%=index%>">
              <button>Read More</button>
            </a> 
            <a class="read-more-link" href="/edit/<%=index%>"><button>Edit</button></a> 
            <a class="read-more-link" href="/delete/<%=index%>"><button>Delete</button></a>
          </div>
        <% }) %>
      <% } %>
</body>
</html>